{
  "name": "@kova402/sdk",
  "version": "1.0.1",
  "description": "Official TypeScript SDK for KOVA - Multi-chain x402 payment facilitator supporting Solana, BASE, BSC, and Bitcoin",
  "keywords": [
    "x402",
    "kova",
    "payment",
    "facilitator",
    "solana",
    "base",
    "bsc",
    "bitcoin",
    "blockchain",
    "crypto",
    "web3",
    "http-payment",
    "multi-chain",
    "typescript"
  ],
  "author": "KOVA",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run clean && npm run build && npm run typecheck"
  },
  "dependencies": {
    "@solana/web3.js": ">=1.90.0",
    "@solana/spl-token": ">=0.4.0",
    "zod": ">=3.20.0"
  },
  "peerDependencies": {
    "@solana/web3.js": ">=1.90.0",
    "@solana/spl-token": ">=0.4.0",
    "zod": ">=3.20.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0",
  "homepage": "https://kova402.com"
}
